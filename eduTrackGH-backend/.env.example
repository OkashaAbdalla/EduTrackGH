PORT=5000
MONGODB_URI=your_mongodb_connection_string
JWT_SECRET=your_jwt_secret_key
FRONTEND_URL=http://localhost:5173

# Email (Nodemailer)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# SMS (Hubtel - Ghana). Optional: set to true and add credentials to send parent notifications
SMS_ENABLED=false
HUBTEL_CLIENT_ID=your_hubtel_client_id
HUBTEL_CLIENT_SECRET=your_hubtel_client_secret

# Admin Access Isolation - generate with: node -e "console.log('secure-admin-' + require('crypto').randomBytes(8).toString('hex'))"
ADMIN_LOGIN_PATH=secure-admin-CHANGE_ME

# Rate limiting (failed attempts per window - successful logins don't count)
RATE_LIMIT_LOGIN_WINDOW_MS=900000
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_ADMIN_WINDOW_MS=900000
RATE_LIMIT_ADMIN_MAX=3
